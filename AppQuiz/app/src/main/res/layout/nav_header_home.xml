<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="#373737"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageView
        android:id="@+id/nav_header_banner"

        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="80dp" />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_header_author_avatar"

        android:layout_below="@id/nav_header_banner"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_width="60dp"
        android:layout_height="60dp" />
    <TextView
        android:id="@+id/nav_header_author_name"
        android:text="Lorence"
        android:textSize="18dp"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@id/nav_header_author_avatar"
        android:layout_below="@id/nav_header_banner"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/nav_header_author_description"
        android:text="lorence@enclave.vn"
        android:textSize="14dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/nav_header_author_name"
        android:layout_toRightOf="@id/nav_header_author_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
